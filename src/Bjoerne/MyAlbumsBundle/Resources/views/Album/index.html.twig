{% extends 'BjoerneMyAlbumsBundle::layout.html.twig' %}

{% block body -%}
    <h1>Album list</h1>

    <table class="records_list table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Artist</th>
                <th>Title</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('album_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.artist }}</td>
                <td>{{ entity.title }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('album_show', { 'id': entity.id }) }}" class="btn">show</a>
                    </li>
                    <li>
                        <a href="{{ path('album_edit', { 'id': entity.id }) }}" class="btn">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('album_new') }}" class="btn">
                <i class="icon-plus-sign"></i>
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
