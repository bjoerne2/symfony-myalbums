{% extends 'BjoerneMyAlbumsBundle::layout.html.twig' %}

{% block body -%}
    <h1>Album edit</h1>

    {{ form_start(edit_form, {attr: {class: 'form-horizontal'}}) }}
        {{ form_widget(edit_form, {'form_type': 'horizontal'}) }}
        <div class="control-group">
            <div class="controls">
                <button type="submit" class="btn">Update</button>
            </div>
        </div>
    {{ form_end(edit_form) }}

        <ul class="record_actions">
    <li>
        <a href="{{ path('album') }}" class="btn">
            <i class="icon-list"></i>
            Back to the list
        </a>
    </li>
    <li>{{ form_start(delete_form) }}
        <button type="submit" class="btn">
            <i class="icon-remove"></i>
            Delete
        </button>
    {{ form_end(delete_form) }}</li>
</ul>
{% endblock %}
