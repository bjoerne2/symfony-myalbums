{% extends 'BjoerneMyAlbumsBundle::layout.html.twig' %}

{% block body -%}
    <h1>Album</h1>

    <table class="record_properties table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Artist</th>
                <td>{{ entity.artist }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ entity.title }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('album') }}" class="btn">
            <i class="icon-list"></i>
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('album_edit', { 'id': entity.id }) }}" class="btn">
            <i class="icon-pencil"></i>
            Edit
        </a>
    </li>
    <li>{{ form_start(delete_form) }}
        <button type="submit" class="btn">
            <i class="icon-remove"></i>
            Delete
        </button>
    {{ form_end(delete_form) }}</li>
</ul>
{% endblock %}
